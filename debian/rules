#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- \
  -DSYSROOT_INCDIR="/usr/include" \
  -DSYSROOT_LIBDIR="/usr/lib" \
  -DBUILD_CATEGORY=ALL \
  -DTARGET_PRODUCT_PLATFORM=qcm6490 \
  -DTARGET_BOARD_PLATFORM=qcm6490 \
  -DGBM_FREE_FD=FALSE \
  -DCAM_SERVER_SYSTEMD_DIR=lib/systemd/system \
  -DCMAKE_CXX_FLAGS="$(CMAKE_CXX_FLAGS) -I/usr/include/glib-2.0 -I/usr/lib/aarch64-linux-gnu/glib-2.0/include -I/usr/include/log"
